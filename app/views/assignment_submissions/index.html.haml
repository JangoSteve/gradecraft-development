%table.table.table-bordered
  %tr
    %th Assignment
    %th User
    %th Group
    %th Feedback
    %th Comment
    %th
    %th
    %th

  - @assignment_submissions.each do |assignment_submission|
    %tr
      %td= assignment_submission.assignment_id
      %td= assignment_submission.user_id
      %td= assignment_submission.group_id
      %td= assignment_submission.feedback
      %td= assignment_submission.comment
      %td= link_to 'Show', assignment_assignment_submission(@assignment, assignment_submission)
      %td= link_to 'Edit', edit_assignment_assignment_submission_path(@assignment, assignment_submission)
      %td= link_to 'Destroy', assignment_assignment_submission(@assignment, assignment_submission), :confirm => 'Are you sure?', :method => :delete


= link_to 'New Assignment submission', new_assignment_assignment_submission_path(@assignment), {:class => 'btn btn-primary'}
