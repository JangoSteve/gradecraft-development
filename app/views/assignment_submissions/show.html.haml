%p
  %b Assignment:
  = @assignment_submission.assignment.try(:name)
%p
  %b User:
  = @assignment_submission.user.try(:name)
%p
  %b Group:
  = @assignment_submission.group_id
%p
  %b Link:
  = link_to @assignment_submission.link
%p
  %b Feedback:
  = @assignment_submission.feedback
%p
  %b Comment:
  = @assignment_submission.comment

- if current_user.is_staff? 
  = render 'grade_form'

%div.span12
  = link_to 'Edit', edit_assignment_assignment_submission_path(@assignment, @assignment_submission), {:class => 'btn btn-primary'}
  = link_to 'Back', assignment_assignment_submissions_path(@assignment), {:class => 'btn btn-primary'}
