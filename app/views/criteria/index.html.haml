%div.col.col-lg-12#content_nav
  = link_to 'New Criterium', new_criterium_path, class => "btn btn-info col col-sm-12 col-lg-2 btn-small pull-right"

%table.table.display.table-bordered
  %tr
    %th Name
    %th Ruberic
    %th Description
    %th
    %th
    %th

  - @criteria.each do |criterium|
    %tr
      %td= criterium.name
      %td= criterium.ruberic_id
      %td= criterium.description
      %td= link_to 'Show', criterium
      %td= link_to 'Edit', edit_criterium_path(criterium)
      %td= link_to 'Destroy', criterium, method: :delete, data: { confirm: 'Are you sure?' }

