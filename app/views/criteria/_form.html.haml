= simple_form_for [@rubric, @criterium] do |f|
  .well.clearfix
    = f.input :name
    = f.input :description, as: :text, input_html: { :class => :ckeditor, 'ckeditor-toolbar' => 'Mini' }
    - if @criterium.category
      = f.input :category, :as => :hidden
    - else
      = f.input :category

  .well.clearfix= render 'levels_form', f: f, rubric: @rubric, criterium: @criterium

  .form-actions
    .btn-toolbar
      .btn-group
        = f.button :submit, :class => "button tiny radius"
      .btn-group
