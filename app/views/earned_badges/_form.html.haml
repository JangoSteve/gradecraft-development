= simple_form_for(@earned_badge, :html => {:class => 'form-horizontal' }) do |f|
  = f.association :earnable, :label => "Awarded To...", :collection => @students
  = f.input :feedback, :as => :text, :input_html => {:id => 'some-textarea', :class => 'span9' } 
  = hidden_field_tag "earned_badge[badge_ids][]", nil
  - @badges.each do |badge|
    = check_box_tag "earned_badge[badge_ids][]", badge.id
    %img{:src => asset_path(badge.icon), :alt => badge.title, :width => "50"}    
    = badge.title
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to 'Cancel', earned_badges_path, :class => 'btn btn-primary'