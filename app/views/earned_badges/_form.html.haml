= simple_form_for(@earned_badge, :html => {:class => 'form-horizontal' }) do |f|
  = f.association :user, :collection => @users
  #coryhelp!
  - if @grade
    = f.association :grade, :collection => @grades, :label => "Assignment"  
  = f.association :badge, :collection => @badges
  = f.input :feedback, :as => :text, :input_html => {:id => 'some-textarea', :class => 'span6' }
  
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to 'Cancel', earned_badges_path, :class => 'btn btn-primary'