= simple_form_for([@badge, @earned_badge]) do |f|
  %h3= "You are awarding the #{@badge.name} #{term_for :badge} to..."
  = f.input :badge_id, :as => :hidden, :collection => @badges
  .small-12.medium-4.columns
    = f.input :student_id, :collection => current_course_data.students, :label => "#{term_for :student}"
  
  .clearfix

  .small-12.columns
    %h5 Feedback
    = f.bootsy_area :feedback
  = hidden_field_tag "earned_badge[badge_ids][]", nil

  %hr
  .right
    = f.button :submit, "#{@earned_badge.persisted? ? 'Update' : 'Award '} #{term_for :badge}",  :class => "button tiny radius"
    = link_to 'Cancel', badge_path(@badge), :class => 'button tiny radius'
