.small-12.panel.mainContent
  / Earned Badge Navigation
  .show-for-medium-up
    = content_nav_for @badge, "Award #{term_for :badge}" do
      = render "badges/tabs"

  .hide-for-medium-up{:style => "padding: 10px"}
    = mobile_nav_for @badge, "Award #{term_for :badge}" 

  .small-12.columns
  
    .hide-for-medium-up
      %a.radius.button.tiny.small-12.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Options
      %ul#drop.f-dropdown
        = render "badges/tabs"

    = render 'form'

  .clearfix