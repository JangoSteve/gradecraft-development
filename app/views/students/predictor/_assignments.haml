- assignment_type, assignments = assignment_type_and_assignments
%li(id="slide-#{assignment_type.id}" data-assignment-type-id="#{assignment_type.id}" data-assignment-type-name="#{assignment_type.name}")
  .slide-panel
    .assignmentType
      %h4= assignment_type.name
      .pull-right
        %span.badge.badge-info
          = "#{current_student_data.score_for_assignment_type(assignment_type)} / "
          = "#{current_student_data.point_total_for_assignment_type(assignment_type)} possible points"
    - assignments.each do |assignment|
      .assignment.clear{:data => {:assignment => assignment.id, :'possible-points' => current_student_data.point_total_for_assignment(assignment)}}
        %span.assignmentName= assignment.name
        - if assignment.is_required?
          %span.label.label-important Required!
        - if current_student_data.grade_released_for_assignment?(assignment)
          %span.points.earned= current_student_data.score_for_assignment(assignment)
          = " out of #{current_student_data.point_total_for_assignment(assignment)} points"
          = hidden_field_tag assignment.name, current_student_data.score_for_assignment(assignment), :'data-assignment-type-id' => assignment.assignment_type_id
        - else
          = "â€“"
          - if assignment_type.fixed?
            = "#{current_student_data.point_total_for_assignment(assignment)} possible points"
            %input{:type => "checkbox", :name => assignment.name, :value => current_student_data.point_total_for_assignment(assignment), :class => "class-checkbox", :'data-assignment-type-id' => assignment.assignment_type_id }
          - elsif assignment_type.slider?
            %span.pScore= "0 "
            = "/ #{current_student_data.point_total_for_assignment(assignment)} possible points"
            .slider{:id => "slider-"+assignment.id.to_s(), :max => current_student_data.point_total_for_assignment(assignment) , :value => 0 }
          - elsif assignment_type.select?
            = "#{current_student_data.point_total_for_assignment(assignment)} possible points"
            = select_tag assignment.name, options_from_collection_for_select(assignment_type.score_levels,'value','name'), :class => 'point-value', :id => "total-#{assignment.id}", :include_blank => true
          - elsif assignment_type.per_assignment?
            - if assignment.fixed?
              = "#{current_student_data.point_total_for_assignment(assignment)} possible points"
              %input{:type => "checkbox", :name => assignment.name, :value => current_student_data.point_total_for_assignment(assignment), :class => "class-checkbox", :'data-assignment-type-id' => assignment.assignment_type_id }
            - elsif assignment.slider?
              %span.pScore= "0 "
              = "/ #{current_student_data.point_total_for_assignment(assignment)} possible points"
              .slider{:id => "slider-#{assignment.id}", :max => current_student_data.point_total_for_assignment(assignment) , :value => 0 }
            - elsif assignment.select?
              = "#{current_student_data.point_total_for_assignment(assignment)} possible points"
              = select_tag assignment.name, options_from_collection_for_select(assignment_type.score_levels,'value','name'), :class => 'point-value', :id => "total-#{assignment.id}", :include_blank => true
    %hr
