%br
- current_course.assignment_types.sorted.each do |assignment_type|
  %li{:id => "slide-#{assignment_type.id}", :'data-assignment-type-id' => assignment_type.id, :'data-assignment-type-name' => assignment_type.name}
    .slide-panel.assignmentType
      %h3.collapse
        = assignment_type.name
        - if current_student.score_for_assignment_type(assignment_type) > 0
          .right.radius.label.success
            = "#{points current_student.score_for_assignment_type(assignment_type)}"
            - if assignment_type.max_value?
              = "/ #{points assignment_type.max_value} points earned"
            - else
              = "/ #{points current_student.point_total_for_assignment_type(assignment_type)} points earned"
        - else
          .right.radius.label.fade
            - if assignment_type.max_value?
              = "#{points assignment_type.max_value} points possible"
            - else
              = "#{points current_student.point_total_for_assignment_type(assignment_type)} points possible"
      .small-12
        - assignments = assignment_type.assignments.includes(:assignment_score_levels, :assignment_type).sorted
        - assignments.each do |assignment|
          - point_total_for_assignment = current_student.point_total_for_assignment(assignment)
          .clear
          - if assignment.point_total > 0
            .assignment
              .small-12.medium-7.columns

                - if assignment.required?
                  %span.has-tip{:title => "This #{term_for :assignment} is required!", :data => {'tooltip' => true} }
                    %i.fi-star
                %span.bold= assignment.name
                - if current_student.grade_released_for_assignment?(assignment)
                  %span.earned= points current_student.grade_for_assignment(assignment).score
                  = " / #{points point_total_for_assignment} points"
                  = hidden_field_tag assignment.name, current_student.score_for_assignment(assignment), :'data-assignment-type-id' => assignment.assignment_type_id
                - else
                  - if assignment.past? && assignment.accepts_submissions && ! current_student.submission_for_assignment(assignment).present?
                    %span.label.alert.radius Late!
                  = "â€“"
                  = "#{points point_total_for_assignment} possible points"

              .small-12.medium-5.columns.assignmentData{:data => {:assignment => assignment.id, :'possible-points' => point_total_for_assignment}}

                - if ! current_student.grade_released_for_assignment?(assignment)
                  - grade_for_assignment = current_student.grade_for_assignment(assignment)
                  - if assignment.fixed?
                    %input{:type => "checkbox", :name => assignment.name, :value => point_total_for_assignment, :class => "class-checkbox right", :'data-assignment-type-id' => assignment.assignment_type_id }
                  - elsif assignment.select?
                    = select_tag assignment.name, options_from_collection_for_select(assignment.assignment_score_levels,'value','formatted_name',  grade_for_assignment.score), :class => 'point-value', :id => "total-#{assignment.id}", :include_blank => true
                  - else
                    %span.pScore= "0 "
                    %span.score-level-name
                    .slider{:id => "slider-#{assignment.id}", :max => point_total_for_assignment, :value => "#{grade_for_assignment.score}", :'data-scorelevelvals' => "#{assignment.assignment_score_levels.map(&:value)}", :'data-scorelevelnames' => "#{assignment.assignment_score_levels.map(&:name)}", :'data-highlight' => "true"}
              .clear
