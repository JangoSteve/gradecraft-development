.small-12.panel.mainContent
  - if current_user.is_student?
    .show-for-medium-up
      = content_nav_for "#{term_for :teams}" do
        = render "student_profile_tabs"
    .hide-for-medium-up{:style => "padding: 10px"}
      = mobile_nav_for "#{term_for :teams}" 

  - else
    / Student Dashboard Breadcrumbs
    .show-for-medium-up
      = content_nav_for current_student do
        = render "student_profile_tabs"
    
    .hide-for-medium-up{:style => "padding: 10px"}
      = mobile_nav_for current_student 

  .small-12.columns

    .hide-for-medium-up
      %a.radius.button.tiny.small-12.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Options
      %ul#drop.f-dropdown
        = render "student_profile_tabs"

    = render "teams/leaderboard"