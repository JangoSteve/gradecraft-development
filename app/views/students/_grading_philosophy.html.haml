.small-12.columns
  - if current_course.grade_scheme_id?
    %table.responsive.simpleTable
      %thead
        %tr
          %th.sortable{"data-sort" => "string"} Name
          %th.sortable{"data-sort" => "int"} Low Range
          %th.sortable{"data-sort" => "int"} High Range
          %th.sortable{"data-sort" => "string"} Letter Grade
          %th
      %tbody
        - @grade_scheme.elements.order_by_high_range.each do |element|
          - if current_student_data.element_level == element
            %tr.achieved
              %td #{element.level}
              %td #{points element.low_range }
              %td #{points element.high_range }
              %td
                = element.letter
              %td= "You are here."
          - else
            %tr
              %td #{element.level}
              %td #{points element.low_range }
              %td #{points element.high_range }
              %td #{element.letter}
              %td

  %p= raw current_course.grading_philosophy

