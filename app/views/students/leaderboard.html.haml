.small-12.panel.mainContent
  / Leaderboard Navigation
  = content_nav_for User, term_for(:students) do
    %li= link_to "Create a New #{term_for :student}", new_user_path, :class => "button tiny radius"
    %li= link_to "Download CSV", students_path(format: 'csv'), :class => "button tiny radius"
    %li= link_to "Download Excel", students_path(format: 'xls'), :class => "button tiny radius"

  .small-12.medium-4.large-4.columns
    %h2= @title

  - if current_course.has_teams?
    .small-12.large-4.large-offset-4.medium-4.medium-offset-4.columns
      = form_tag students_path, :method => :get do
        = select_tag :team_id, options_for_select(current_course.teams.alpha.map { |t| [t.name, t.id] }, @team.try(:id)), :prompt => "Select a #{current_course.team_term}", :class => "small-8 medium-8 input-sm teamfilter"
        = submit_tag 'Filter', :class => 'button tiny radius pull-right'

  .small-12.columns
    %table.responsive.simpleTable
      %thead
        %tr
          %th.sortable{"data-sort" => "int"} Rank
          %th.sortable{"data-sort" => "string"} First Name
          %th.sortable{"data-sort" => "string"} Last Name
          - if current_course.has_teams?
            %th.sortable{"data-sort" => "string"} #{current_course.team_term}
          - if current_course.team_roles?
            %th.sortable{"data-sort" => "string"} Role
          - if current_user.is_staff?
            %th.sortable{"data-sort" => "int"} Score
            %th.sortable{"data-sort" => "string"} Grade
          - if current_course.has_badges?
            %th.sortable{"data-sort" => "string", :width => "200" } Badges Earned
          %th
      %tbody
        - i = 1
        - current_course_data.students.order_by_high_score.each do |student|
          %tr
            %td= i
            %td= link_to student.first_name, student_path(student)
            %td= student.last_name
            - if current_course.has_teams?
              %td
                //- if student.teams.present?
                //= link_to student.team_for_course(course).name, student.team_for_course(course).name
            - if current_course.team_roles?
              %td= student.try(:team_role)
            - if student.respond_to?(:grades)
              %td= points student.score_for_course(current_course)
              %td= student.grade_level_for_course(current_course)
            - if current_course.has_badges?
              %td
                - student.earned_badges.each do |badge|
                  %img{:src => badge.try(:icon), :alt => badge.try(:name), :width => "20"}
            %td
              .button-bar
                %ul.button-group.radius.round
                  %li= link_to "Dashboard", student_path(student), :class => "button tiny small large"
                  %li= mail_to student.email, "Email", :class => "button tiny small large"
                  %li= link_to "Edit", edit_user_path(student), :class => "button tiny small large"
          - i += 1

  .clearfix