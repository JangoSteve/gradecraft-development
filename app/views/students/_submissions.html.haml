- if current_student_data.submission_for_assignment?(assignment)
  = link_to "See Submission", assignment_submission_path(assignment, current_student_data.submission_for_assignment(assignment), :student_id => current_student), :class => 'button tiny'
- elsif assignment.future? || assignment.still_accepted?
  = link_to "Submit", new_assignment_submission_path(assignment, :student_id => current_student), :class => 'button tiny'
  - if assignment.past?
    %span.label.warning= "Past due"
