- if current_user.is_staff?
  = content_nav_for current_student do
    %li= link_to "See All #{term_for :students}", students_path, :class => "btn btn-tiny btn-info"
    %li= link_to "Edit #{current_student.name}'s Profile", edit_user_path(current_student), :class => "btn btn-tiny btn-info"
    %li= link_to "See #{current_student.name}'s Dashboard", student_path(current_student), :class => "btn btn-tiny btn-info"

%h3= current_student.name

%table.table.table-striped.simpleTable
  %thead
    %tr
      %th.sortable{"data-sort" => "int"} ID
      %th.sortable{"data-sort" => "int"} ID | Assignment
      %th.sortable{"data-sort" => "string"} Task
      %th.sortable{"data-sort" => "string"} Submission
      %th.sortable{"data-sort" => "int"} Raw Score
      %th.sortable{"data-sort" => "int"} Score
      %th.sortable{"data-sort" => "int"} Predicted Score
      %th.sortable{"data-sort" => "string"} Feedback
      %th.sortable{"data-sort" => "string"} Status
      %th
      %th
      %th
  %tbody
    - @grades.each do |g|
      %tr
        %td= g.id
        %td= "#{g.assignment_id} â€¢ #{g.assignment.try(:name)}"
        %td= g.task.name if g.task.present?
        %td= g.submission.id if g.submission.present?
        %td= g.raw_score
        %td= g.score
        %td= g.predicted_score
        %td= g.feedback
        %td= g.status
        %td= link_to "Edit Grade", edit_assignment_grade_path(g.assignment_id, :student_id => g.student_id), :class => 'btn btn-tiny btn-info'
        %td= link_to "See Grade", assignment_grade_path(g.assignment_id, :student_id => g.student_id), :class => "btn btn-tiny btn-success"
        %td= link_to "Delete Grade", assignment_grade_path(g.assignment_id, :student_id => g.student_id), :class => "btn btn-tiny btn-warning", :data => { confirm: 'Are you sure?' }, :method => :delete
