= render "students/main_tabs"

.sidebar
  .gravatar.sidebar_section= gravatar_for current_student

  .sidebar_section.center.section= link_to current_student.email, "mailto:#{current_student.email}"

  - if current_user.is_prof? || current_user.is_staff? && current_course.academic_history_visible?
    .sidebar_section= render "students/sidebar/sidebar_class_info"

  .sidebar_section= render "students/sidebar/sidebar_history"

  .sidebar_section= render 'students/sidebar/sidebar_grade_distribution'

  - if current_course.has_badges?
    .sidebar_section= render "students/sidebar/sidebar_badges"

  .sidebar_section= render "students/sidebar/sidebar_to_do_list"
