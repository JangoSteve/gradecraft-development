%h2
  - if current_user.is_student?
    Your current score is
  - elsif current_user.is_staff?
    Current Score:
    / Check to see if the course has a pre-determined total number of points
  - if current_course.point_total?
    %span#userScoreNum #{points current_student_data.score}/#{points current_course.point_total}
    / Else tally all of the points for all of the assignments in the course
  - else
    %span#userScoreNum #{points current_student_data.score}/#{points current_student_data.point_total}
  - if current_student_data.grade_level.present?
    Current Level:
    %span#userScoreNum= current_student_data.grade_level

%dl.tabs{:data => {'tab' => true}}
  %dd
    %a{ "href" => "#syllabus" } Assignments
  - if current_course.use_timeline?
    %dd
      %a{ "href" => "#timeline" } Timeline
  //%dd
  //%a{ "href" => "#calendar" } Calendar
  - if current_course.grading_philosophy.present?
    %dd
      %a{ "href" => "#grading-philosophy"} Grading Philosophy
  - if current_course.predictor_on?
    %dd.active
      %a{ "href" => "#predictor"} Grade Predictor
  - if current_course.has_badges?
    %dd
      %a{ "href" => "#badges"} #{current_course.badge_term.pluralize}
  - if current_course.teams_visible?
    %dd
      %a{ "href" => "#leaderboard"} #{term_for :teams}
.tabs-content
  .content#syllabus
    = render "students/syllabus"
  - if current_course.use_timeline?
    .content#timeline
      = render "students/timeline"
  .content#calendar
    = render "students/calendar"
  - if current_course.grading_philosophy.present?
    .content#grading-philosophy
      = render "students/grading_philosophy"
  - if current_course.predictor_on?
    .content#predictor.active
      = render "students/predictor"
  - if current_course.has_badges?
    .content#badges
      = render "students/badges"
  - if current_course.teams_visible?
    .content#leaderboard
      = render "teams/leaderboard"
