= content_nav_for Badge do
  = render "staff_tabs"

.small-12.columns
  %h2 #{current_course.badge_term.pluralize} Leaderboard

  %dl.tabs{:data => {'tab' => true}}
    %dd.active
      %a{ "href" => "#tab1" } All Awarded #{current_course.badge_term.pluralize}
    %dd
      %a{ "href" => "#tab2" } Shared #{current_course.badge_term.pluralize}

  .tabs-content
    .content.active#tab1.small-12.columns
      = render "students/all_class_badges"
    .content#tab2.small-12.columns
      = render "students/public_class_badges"