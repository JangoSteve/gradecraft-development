= link_to 'Create a New Course Grade Scheme Element', new_course_grade_scheme_course_grade_scheme_element_path(@course_grade_scheme), :class => 'btn btn-info btn-small'

%table.display.table-bordered.table
  %thead
    %tr
      %th Name
      %th Low Range
      %th High Range
      %th Letter Grade
      %th
      %th
      %th
  %tbody
    - @course_grade_scheme_elements.each do |element|
      %tr
        %td= link_to element.name, element
        %td= element.low_range
        %td= element.high_range
        %td= element.letter_grade
        %td= link_to 'Edit', edit_course_grade_scheme_course_grade_scheme_element_path(@course_grade_scheme, element), :class => 'btn btn-tiny btn-success'
        %td= link_to 'Delete', course_grade_scheme_course_grade_scheme_element_path(@course_grade_scheme, element), :class => 'btn btn-tiny btn-success', :data => { :confirm => 'Are you sure?' }, :method => :delete