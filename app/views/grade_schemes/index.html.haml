= content_nav_for GradeScheme do
  %li= link_to 'New Grade Scheme', new_grade_scheme_path, :class => "button tiny radius success"

.small-12.columns
  %h3= @title

  %table.responsive.simpleTable
    %thead
      %tr
        %th.sortable{"data-sort" => "string"} Scheme Name
        %th
    %tbody
      - for grade_scheme in @grade_schemes
        %tr
          %td= link_to grade_scheme.name, grade_scheme
          %td
            .button-bar
              %ul.button-group.radius.round
                %li= link_to 'View', grade_scheme, :class => 'button tiny small large'
                %li= link_to 'Edit', edit_grade_scheme_path(grade_scheme), :class => 'button tiny small large'
                %li= link_to 'Delete', grade_scheme, :class => 'button tiny small large', :data => { confirm: 'Are you sure?' }, :method => :delete
