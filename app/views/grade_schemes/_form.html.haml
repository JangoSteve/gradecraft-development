= simple_form_for(@grade_scheme) do |f|
  = f.input :name, :as => :string
  = f.input :description, :as => :text, :input_html => { :style => "width: 90%; height: 200px;"}


  %h5 Grade Scheme Elements

  %script(id="element-template" type="text/x-template")
    %fieldset.element
      = f.simple_fields_for :elements, GradeSchemeElement.new, child_index: 'child_index' do |ef|
        = render 'element_fields', f: ef

  %fieldset.elements
    - @grade_scheme.elements.each do |element|
      %fieldset.element
        = f.simple_fields_for :elements, element do |ef|
          = render 'element_fields', f: ef

  = link_to 'Add an Element', '#', class: 'add-element button tiny radius'


  .form-actions
    %div.btn-toolbar
      %div.btn-group
        = f.button :submit, "#{@grade_scheme.persisted? ? 'Update' : 'Create'} Grade Scheme", :class => "btn-primary"
      %div.btn-group
        = link_to 'Cancel', grade_schemes_path, :class => 'button tiny radius'