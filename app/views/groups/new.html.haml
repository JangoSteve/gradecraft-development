.small-12.panel.mainContent
  / Group Navigation
  .show-for-medium-up
    - if current_user.is_staff?
      = content_nav_for Group, "Create A New #{term_for :group}" do
        = render "tabs"
    - else
      = content_nav_for "Create A New #{term_for :group}" do
        = render "students/student_profile_tabs"

  .hide-for-medium-up{:style => "padding: 10px"}
    = mobile_nav_for Group, "Create A New #{term_for :group}" 

  .small-12.columns
    .hide-for-medium-up
      %a.radius.button.tiny.small-12.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Options
      %ul#drop.f-dropdown
        = render "tabs"

    %h2= @title
    = render 'form'

  .clearfix
