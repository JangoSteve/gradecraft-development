.small-12.panel.mainContent
  / Group Navigation
  = content_nav_for @group do
    - if current_user.is_staff?
      %li= link_to "See All #{term_for :groups}", groups_path, :class => "button tiny radius"
      %li= link_to "Edit #{@group.name}", edit_group_path(@group), :class => "button tiny radius"
      %li= link_to "New #{term_for :group}", new_group_path, :class => "button tiny radius"
    - else
      %li= link_to "My Dashboard", dashboard_path, :class => "button tiny radius"
      %li= link_to "Edit #{@group.name}", edit_group_path(@group), :class => "button tiny radius"


  .small-12.columns
    %h2= @title
    
    %h3 
      = "#{term_for :group}: #{@group.name}"

    %hr

    %h3 Assignment(s)
    %ul
      - @group.assignment_groups.each do |ag|
        %li= link_to ag.assignment.name, ag.assignment

    %h3 Members:
    %ul
      - @group.group_memberships.each do |gm|
        - if current_user.is_staff?
          %li= link_to gm.student.name, student_path(gm.student)
        - else
          %li= gm.student.name

    - if @group.text_proposal?
      %h3 Proposal:
      %p= raw @group.try(:proposal)

  .clearfix