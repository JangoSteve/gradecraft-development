.small-12.panel.mainContent
  / Category Navigation
  .show-for-large-up
    = content_nav_for Category do
      = render  "tabs"

  .hide-for-large-up{:style => "padding: 10px"}
    = mobile_nav_for Category

  .small-12
    .hide-for-large-up
      %a.radius.button.tiny.small-12.medium-4.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Select
      %ul#drop.f-dropdown
        = render "tabs"

    %h2= @title

  %table.responsive.simpleTable
    %thead
      %tr
        %th.sortable{"data-sort" => "string"} Name
        %th.sortable{"data-sort" => "string"} Description
        %th
        %th
    %tbody
      - @categories.each do |category|
        %tr
          %td= link_to category.name, category
          %td= raw category.description
          %td
            .button-bar
              %ul.button-group.right.round
                %li= link_to 'Edit', edit_category_path(category), :class => 'button tiny radius'
                %li= link_to 'Delete', category, :class => 'button tiny radius', :data => { confirm: 'Are you sure?' }, :method => :delete

  .clearfix