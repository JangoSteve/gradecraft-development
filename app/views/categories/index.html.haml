%div.col.col-lg-12#content_nav
  = link_to 'New Category', new_category_path, {:class => 'btn btn-info col col-sm-12 col-lg-2 btn-small pull-right'}

%table.table.display.table-bordered.tablesorter
  %thead
    %tr
      %th Name
      %th Description
      %th.header
      %th.header
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category
        %td= raw category.description
        %td= link_to 'Edit', edit_category_path(category), :class => 'btn btn-tiny btn-success'
        %td= link_to 'Delete', category, :class => 'btn btn-tiny btn-success', :data => { :confirm => 'Are you sure?' }, :method => :delete

