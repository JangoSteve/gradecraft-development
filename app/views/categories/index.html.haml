= content_nav_for Category do
  %li= link_to 'New Category', new_category_path, :class => "button tiny radius"

.small-12
  %h3= @title

%table.responsive.simpleTable
  %thead
    %tr
      %th.sortable{"data-sort" => "string"} Name
      %th.sortable{"data-sort" => "string"} Description
      %th
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category
        %td= raw category.description
        %td= link_to 'Edit', edit_category_path(category), :class => 'button tiny radius'
        %td= link_to 'Delete', category, :class => 'button tiny radius', :data => { confirm: 'Are you sure?' }, :method => :delete