- if @user.submission_for_assignment(assignment)
  = link_to "See Submission", assignment_submission_path(assignment, @user.submission_for_assignment(assignment), :student_id => @user), :class => 'btn btn-xs btn-info'
- elsif assignment.future? || assignment.still_accepted?
  = link_to "Submit", new_assignment_submission_path(assignment, @user.submission_for_assignment(assignment), :student_id => @user), :class => 'btn btn-xs btn-success'
  - if assignment.past?
    %span.missed= "Past due"