%ul.nav.nav-tabs
  %li
    %a{ "data-toggle" => "tab", "data-target" => "#tab4"} Assignments
  - if current_course.grading_philosophy.present?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab6"} Grading Philosophy
  - if current_course.use_timeline?
    %li.active
      %a{ "data-toggle" => "tab", "data-target" => "#tab1" } Timeline
  //%li
  //%a{ "data-toggle" => "tab", "data-target" => "#tab2"} Calendar
  - if current_course.has_badges?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab3"} Badges
  - if current_course.predictor_on?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab5"} Grade Predictor
.tab-content
  .tab-pane#tab4.active
    = render "users/syllabus"
  - if current_course.grading_philosophy.present?
    .tab-pane#tab6
      = render "users/grading_philosophy"
  - if current_course.use_timeline?
    .tab-pane#tab1
      = render "users/timeline"
  //.tab-pane#tab2
  //= render "users/calendar"
  - if current_course.predictor_on?
    .tab-pane#tab3
      = render "users/badges"
  - if current_course.predictor_on?
    .tab-pane#tab5
      = render "users/predictor"