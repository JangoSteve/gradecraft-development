%h4
  - if current_user.is_student?
    Your current score is
  - elsif current_user.is_staff?
    Current Score:
  %span#userScoreNum #{points current_student_data.score}/#{points current_student_data.point_total}
  - if current_student_data.grade_level
    Current Level:
    %span#userScoreNum= current_student_data.grade_level
    %br
%ul.nav.nav-tabs
  %li.active
    = link_to 'Assignments', '#', data: { toggle: 'tab', target: '#tab1' }
  %li
    %a{ "data-toggle" => "tab", "data-target" => "#tab2" } Timeline
  - if current_course.grading_philosophy.present?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab3"} Grading Philosophy
  - if current_course.predictor_on?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab7"} Grade Predictor
  - if current_course.has_badges?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab5"} #{current_course.badge_term.pluralize}
  - if current_course.teams_visible?
    %li
      %a{ "data-toggle" => "tab", "data-target" => "#tab8"} #{term_for :teams}
.tab-content
  .tab-pane#tab1.active
    = render "users/syllabus"
  .tab-pane#tab2
    = render "users/timeline"
  - if current_course.grading_philosophy.present?
    .tab-pane#tab3
      = render "users/grading_philosophy"
  - if current_course.predictor_on?
    .tab-pane#tab7
      = render "users/predictor"
  - if current_course.has_badges?
    .tab-pane#tab5
      = render "users/badges"
  - if current_course.teams_visible?
    .tab-pane#tab8
      = render "teams/leaderboard"
