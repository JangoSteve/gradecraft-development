= content_nav_for User do
  %li= link_to "Create a New #{current_course.user_term}", new_user_path
%div.col.col-lg-5.col-sm-12
  = form_tag students_users_path, :method => :get do
    = select_tag :team_id, options_for_select(current_course.teams.map { |t| [t.name, t.id] }, @team.try(:id)), :prompt => "Select a #{current_course.team_term}", :class => "col col-lg-9 col-sm-10 input-sm"
    = submit_tag 'Filter', :class => 'btn btn-sm btn-primary col col-lg-2 col-sm-2 pull-right'

%table.table.display.table-bordered#sortableTable.tablesorter
  %thead
    %tr
      %th Name
      %th Email
      %th Role
      %th Team
      %th Score
      %th Logins
      - if current_course.has_badges?
        %th Badges Earned
      %th.header
      %th.header
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.name, user_path(user)
        %td= user.email
        %td= user.role
        %td
          - user.teams.each do |team|
            = team.name
        %td= user.score_for_course(current_course) if user.is_student?
        %td= user.visit_count
        - if current_course.has_badges?
          %td
            - user.earned_badges.each do |badge|
              %img{:src => asset_path(badge.icon), :alt => badge.name, :width => "25"}
        - else
          %td
          %td
        %td= link_to 'Edit', edit_user_path(user), :class => 'btn btn-tiny btn-success'
        %td= link_to 'Delete', user, :class => 'btn btn-tiny btn-success', :confirm => 'This will delete the student from GradeCraft - Are you sure?' , :method => :delete

%div.col.col-lg-12
  = link_to "Create a New #{current_course.user_term}", new_user_path, :class => "btn btn-primary"
