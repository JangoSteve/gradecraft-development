.col-lg-12.col-md-12.col-sm-12.col-xs-12.center.classInfo.badge-secondary-info.section{"data-target" => "#courseInfo", "data-toggle" => "collapse"}
  %h4.center= current_course.name
  #courseInfo.collapse
    %p
      %b Professor
      = current_course.professor.try(:name)
    - current_student.team_leader.tap do |team_leader|
      - if team_leader.present?
        = link_to "Email #{current_course.team_leader_term} (#{team_leader.first_name})", "mailto:#{team_leader.email}"
    - cache ['v1', current_course] do
      - if current_course.phone.present?
        %p
          %b Phone Number:
          = link_to current_course.phone, "tel:#{current_course.phone}"
      - if current_course.class_email.present?
        %p
          %b Class Email:
          = mail_to current_course.class_email, current_course.class_email
      - if current_course.twitter_handle.present?
        %p
          %b Twitter Handle:
          = link_to current_course.twitter_handle, "http://www.twitter.com/#{current_course.twitter_handle}"
      - if current_course.twitter_hashtag.present?
        %p
          %b Hashtag:
          = link_to current_course.twitter_hashtag, "http://www.twitter.com/search?q=%23#{current_course.twitter_hashtag}&src=hash"
      - if current_course.meeting_times.present?
        %p
          %b Classes Meet:
          = current_course.meeting_times
          = current_course.location
      - if current_course.office.present?
        %p
          %b Professor's Office:
          = current_course.office
      - if current_course.office_hours.present?
        %p
          %b Office Hours:
          = auto_link(current_course.office_hours)
