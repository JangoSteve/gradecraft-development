.modal{:id => "submission_for_assignment-#{assignment.id}"}
  .modal-dialog
    .modal-content
      .modal-header
        %button{:type => "button", :class => "close", "data-dismiss" => "modal", "aria-hidden" => "true"} x
        %h3= assignment.name
        %p= assignment.description
      = simple_form_for([assignment, submission], :html => {:class => 'form-horizontal' }) do |f|
        = f.input :link, :hint => "Where is the assignment located on the web?", :input_html => {:class => "col col-lg-9"}
        = f.text_area :text_comment, :class => :ckeditor, :input_html => { :maxlength => 1000 }, :label => "Text"
        .modal-footer
          %a{:href => "#", :class => " btn btn-info", "data-dismiss" => "modal", "aria-hidden" => "true"}Cancel
          = f.button :submit, "Submit", :class => "pull-right btn btn-primary"