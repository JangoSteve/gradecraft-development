= content_nav_for Badge do
  %li= link_to "Create New #{current_course.badge_term}", new_badge_path
  %li= link_to "See All #{current_course.badge_term.pluralize}", badges_path

%table.table.table-striped
  %thead
    %tr
      %th #{current_course.user_term}
      %th #{current_course.badge_term.pluralize}
      - if current_course.valuable_badges?
        %th Total Badge Score
  %tbody
    - @students.each do |student|
      - if student.badges_shared(current_course)
        %tr
          %td= student.name
          %td
            - student.earned_badges.each do |eb|
              - if eb.shared?
                %img{:src => eb.try(:icon), :alt => eb.try(:name), :width => "25"}