= content_nav_for User do
  %li= link_to "Create a New #{current_course.user_term}", new_user_path
%div.col.col-lg-5.col-sm-12
  = form_tag students_users_path, :method => :get do
    = select_tag :team_id, options_for_select(current_course.teams.map { |t| [t.name, t.id] }, @team.try(:id)), :prompt => "Select a #{current_course.team_term}", :class => "col col-lg-9 col-sm-10 input-sm"
    = submit_tag 'Filter', :class => 'btn btn-sm btn-primary col col-lg-2 col-sm-2 pull-right'

%table.table.col.col-lg-12.col-sm-12
  %thead
    %tr
      %th Rank
      %th Name
      %th Email
      %th #{current_course.team_term}
      - if current_course.team_roles?
        %th Role
      - if current_user.is_staff?
        %th Score
        %th Current Grade
      - if current_course.has_badges?
        %th Badges Earned
      %th
  %tbody
    - i = 1
    - @sorted_students.each do |student|
      %tr
        %td= i
        %td= link_to student.name, user_path(student)
        %td= mail_to student.email, student.email
        %td
          - if student.teams.present?
            = link_to student.teams.first.try(:name), student.teams.first
        - if current_course.team_roles?
          %td= student.try(:team_role)
        - if student.respond_to?(:grades)
          %td= number_with_delimiter(student.score_for_course(current_course), :delimiter => ',')
          %td= student.grade_level_for_course(current_course)
        - if current_course.has_badges?
          %td
            - student.earned_badges.each do |badge|
              %img{:src => badge.try(:icon), :alt => badge.try(:name), :width => "25"}
        %td= link_to 'Remove from Course', course_membership_path(current_course.membership_for_student(student)), :class => 'btn btn-tiny btn-success', :data => { :confirm => 'Are you sure you want to remove this student from your course?' }, :method => :delete
      - i += 1


= "Download:"
= link_to "CSV", students_users_path(format: "csv") |
= link_to "Excel", students_users_path(format: "xls")