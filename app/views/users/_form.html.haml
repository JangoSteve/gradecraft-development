= semantic_form_for @user do |f|
  = f.inputs do
    .text= f.input :username
    .text= f.input :email
    .text= f.input :first_name, :label => "First Name"
    .text= f.input :last_name, :label => "Last Name"
    - if !@user.persisted?
      .text= f.input :password, :as => :password
      .text= f.input :password_confirmation, :as => :password
    .text= f.input :team, :as => :select, :collection => @teams
    .text= f.input :role, :as => :select, :collection => [["Student", "student"],["GSI", "gsi"],["Admin", "admin"],["Professor", "professor"]]
    /= f.input :token, :as => :hidden
    = f.buttons
