= semantic_form_for @user do |f|
  = f.inputs do
    = f.input :email
    = f.input :first_name
    = f.input :last_name
    - if !@user.persisted?
      = f.input :password, :as => :password
      = f.input :password_confirmation, :as => :password
    = f.input :role, :as => :select, :collection => [["Student", "student"], ["GSI", "gsi"], ["Professor", "professor"], ["Admin", "admin"]]
    = f.input :team_id, :as => :select, :collection => @teams
    /= f.input :token, :as => :hidden 
    = f.buttons       