%div.pull-left.col.col-lg-4
  = gravatar_for @user, :size => 250
  %br
  Need a Gravatar?
  = link_to "Get One Here!", "https://en.gravatar.com/"

= simple_form_for(@user, :html => {:class => 'form-horizontal pull-left span6' }) do |f|
  = f.input :email
  = f.input :first_name
  = f.input :last_name
  = f.input :display_name
  = f.input :private_display, :label => "Private Browsing", :hint => "For privacy purposes would you like to hide all identifying information (name and email address) while browsing?"
  = f.input :team_role, :hint => "What will you contribute to your team?"
  = f.simple_fields_for :course_memberships do |p| 
    = p.input :shared_badges, :label => "Social Badges", as: :boolean, :hint => "Do you want to publically display the badges you earn?", :collection => [["Yes"],["No"],["Decide per Badge"]] 
  // Taken out bc of cosign
  //= f.input :password
  //= f.input :password_confirmation
  

  %div.btn-toolbar
    %div.btn-group
      = submit_tag 'Update Settings', :class => 'btn btn-primary'
    %div.btn-group
      = link_to 'Cancel', root_path, :class => 'btn btn-info'