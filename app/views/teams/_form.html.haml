= form_for @team do |f|
  .small-12.medium-4.columns
    = f.label :name, "#{current_course.team_term} Name"
    = f.text_field :name
  .small-12.columns
    = f.check_box :student_ids

  .clearfix

  .small-12
    = f.submit "#{@team.persisted? ? 'Update' : 'Create'} #{ term_for :team }", :class => 'button tiny radius'
    = link_to 'Cancel', teams_path, :class => 'button tiny radius'
