.small-12.panel.mainContent
  / Team Edit Breadcrumbs
  .show-for-medium-up
    = content_nav_for Team, "Edit #{breadcrumb_link_for(@team)}".html_safe do
      = render "tabs"
    
  .hide-for-medium-up{:style => "padding: 10px"}
    = mobile_nav_for Team, "Edit #{breadcrumb_link_for(@team)}".html_safe 

  .small-12.columns

    .hide-for-medium-up
      %a.radius.button.tiny.small-12.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Options
      %ul#drop.f-dropdown
        = render "tabs"

    %h2= @title
    = render 'form'

  .clearfix