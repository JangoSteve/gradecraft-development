%dl.tabs{:data => {'tab' => true}}
  %dd.active
    %a{ "href" => "#tabt1"} #{term_for :team} Leaderboard
  - if current_course.in_team_leaderboard? || current_student.team_for_course(current_course).in_team_leaderboard?
    %dd
      %a{ "href" => "#tabt2"} In-#{term_for :team} Rankings
  - if current_course.team_challenges?
    %dd
      %a{ "href" => "#tabt3"} #{term_for :challenges}

- if current_user.is_student? && ! current_student.display_name?
  = "Want to see the your #{term_for :team} leaderboard?"
  = link_to "Set your screen name!", edit_profile_users_path

.tabs-content
  .content#tabt1.active
    %table.responsive.simpleTable
      %thead
        %tr
          %th
          %th Name
          - if current_course.team_score_average?
            %th Score
      %tbody
        - i = 1
        - current_course_data.teams_by_high_score.each do |team|
          %tr
            %td= i
            %td= team.name
            - if current_course.team_score_average?
              %td= points team.try(:average_grade)
          - i += 1

  .content#tabt2
    = render "teams/in_team_rankings"

  .content#tabt3
    = render "challenges/student_index"
