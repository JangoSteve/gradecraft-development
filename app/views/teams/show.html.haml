= content_nav_for @team do
  %li= link_to "See All #{term_for :teams}", teams_path, :class => "btn btn-tiny btn-info"
  %li= link_to "Edit #{@team.name}", edit_team_path(@team), :class => "btn btn-tiny btn-info"
  %li= link_to "Add a #{term_for :team}", new_team_path, :class => "btn btn-tiny btn-info"
  - if current_course.team_challenges?
    %li= link_to "Grade a #{term_for :challenge}", challenges_path, :class => "btn btn-tiny btn-info"

.col-lg-12
  %h3= @team.name
  %p.clear
    %b Points:
    = points @team.score
  %p
    %b Rank:
  - if @team.earned_badges.present?
    %p
      %b Badges:
      - @team.earned_badges.each do |badge|
        %img{:src => asset_path(badge.icon), :alt => badge.name, :width => "40"}
        = @team.earned_badges.count

.col-lg-12
  %h4= "#{current_course.user_term}s"

%table.table.table-striped.simpleTable
  %thead
    %tr
      %th.sortable{"data-sort" => "string"} Name
      %th.sortable{"data-sort" => "string"} Email
      %th.sortable{"data-sort" => "string"} Role
      %th.sortable{"data-sort" => "int"} Score
      %th Level
      - if current_course.has_badges?
        %th{"data-sort" => "string"} #{term_for :badges} Earned
      %th
  %tbody
    - @team.students.each do |student|
      %tr
        %td{:data => { :"sort-value" => "#{student.last_name}"} }= link_to student.name, student_path(student)
        %td= mail_to student.email, student.email
        %td= student.team_role
        %td= points student.score_for_course(current_course) if student.respond_to?(:grades)
        %td= student.grade_level_for_course(current_course)
        - if current_course.has_badges?
          %td
            - student.earned_badges.each do |badge|
              %img{:src => asset_path(badge.icon), :alt => badge.name, :width => "25"}
        %td= link_to 'Edit', edit_user_path(student), :class => 'btn btn-tiny btn-info'

%hr

.col-lg-12
  %h4 Challenge Grades

%table.table-striped.table.simpleTable
  %thead
    %tr
      %th{"data-sort" => "string"} Name
      %th Score
      %th

  %tbody
    - @challenges.each do |challenge|
      %tr
        %td= link_to challenge.name, challenge
        %td= challenge.challenge_grade_for_team(@team).try(:score)
        %td
          - if challenge.challenge_grade_for_team(@team).present?
            = link_to 'Edit Grade', edit_challenge_challenge_grade_path(:challenge_id => challenge, :id => challenge.challenge_grade_for_team(@team).id), :class => 'btn btn-tiny btn-info'
          - else
            = link_to "Grade", new_challenge_challenge_grade_path(:challenge_id => challenge, :team_id => @team.id), :class => 'btn btn-tiny btn-success'
