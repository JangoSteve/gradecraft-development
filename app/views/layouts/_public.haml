.row
  .twelve.columns
    - if flash[:notice]
      %div.alert-box.success
        = flash[:notice]
        <a href="" class="close">&times;</a>
    - if flash[:error]
      %div.alert-box.alert
        = flash[:error]
        <a href="" class="close">&times;</a>
    - if flash[:alert]
      %div.alert-box
        = flash[:alert]
        <a href="" class="close">&times;</a>
    = render 'layouts/content'
%footer.row
  = render 'layouts/footer'
