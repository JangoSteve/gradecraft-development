- if flash[:notice]
  .alert-box.success
    = flash[:notice].html_safe
    <a href="" class="close">&times;</a>
- if flash[:error]
  .alert-box.alert
  = flash[:error].html_safe
  <a href="" class="close">&times;</a>
- if flash[:alert]
  .alert-box
  = flash[:alert].html_safe
  <a href="" class="close">&times;</a>