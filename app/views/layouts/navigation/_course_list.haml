.show-for-small
  %h5 My Courses
- cache ["v1", current_user] do
  - current_user.courses.alphabetical.each do |c|
    - cache ["v1", c] do
      - if c.active?
        %li= link_to "#{c.courseno} #{c.semester.capitalize.first[0]}#{c.year}", change_current_course_path(:course_id => c.id), :method => 'post'
  - if current_user_is_staff?
    %ul
      %li
        %a{:href => new_course_path}
          Create a New Course
          %i.fa.fa-angle-double-right

  - if current_user.archived_courses.present?
    .past_courses
      %hr
      %h5 Past Courses
      - current_user.courses.alphabetical.each do |c|
        - cache ["v1", c] do
          - if ! c.active?
            %li.archived= link_to "#{c.courseno} #{c.semester.capitalize.first[0]}#{c.year}", change_current_course_path(:course_id => c.id), :method => 'post'
