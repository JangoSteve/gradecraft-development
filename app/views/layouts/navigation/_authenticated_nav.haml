%section.top-bar-section.authenticated_nav.hide-for-small
  %ul.right
    %li.sr-only#my-courses-navigation Navigation for my courses
    %li.has-dropdown.course_switch{:role => "navigation", "aria-labeledby" => "my-courses-navigation", "title" => "Navigation for my courses"}
      %a My Courses
      %ul.dropdown
        = render "layouts/navigation/course_list"
    %li.divider
    = render "layouts/navigation/class_info"

    %li.divider
    %li.sr-only#user-profile-navigation Navigation to user profile and log out
    %li.has-dropdown

      %a
        - if current_user.avatar_file_name.present?
          %img.img-rounded{:src => current_user.avatar_file_name, :width => 30, :height => 30}
        &nbsp;
        = current_user.public_name
      %ul.dropdown
        = render "layouts/navigation/account_info"
