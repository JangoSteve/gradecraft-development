%section.top-bar-section
  %ul.right
    %li.sr-only#my-courses-navigation Navigation for my courses
    %li.has-dropdown.course_switch.show-for-medium-up{:role => "navigation", "aria-labeledby" => "my-courses-navigation", "title" => "Navigation for my courses"}
      %a My Courses
      %ul.dropdown
        - current_user.courses.each do |c|
          - if c.active?
            %li= link_to "#{c.name}", change_current_course_path(:course_id => c.id), :method => 'post'

        - if current_user.archived_courses.present?
          .past_courses
            %hr
            %h5 Past Courses
            - current_user.courses.each do |c|
              - if ! c.active?
                %li.archived= link_to "#{c.name} (#{c.semester.capitalize} #{c.year})", change_current_course_path(:course_id => c.id), :method => 'post'
                
    = render "layouts/class_info"

    %li.sr-only#user-profile-navigation Navigation to user profile and log out
    %li.has-dropdown.show-for-small-up{:role => "navigation", "aria-labeledby" => "user-profile-navigation", "title" => "Navigation to user profile and log out"}
      %a
        - if current_user.avatar_file_name.present?
          %img.img-rounded{:src => current_user.avatar_file_name, :size => 30} 
        = current_user.public_name
      %ul.dropdown
        %li= link_to "My Account", edit_profile_users_path
        %li= link_to "Logout", :logout
