%div{:class => 'btn-group pull-right'}
  %a{:class => 'username btn btn-info btn-xs dropdown-toggle', "data-toggle" => 'dropdown', :href => '#' }
    = current_user.public_name
    %span.caret
  %ul{:class => 'dropdown-menu'}
    %li= link_to "My Account", edit_profile_users_path
    %li= link_to "Logout", :logout
- if current_user.is_admin?
  %div{:class => 'btn-group pull-right course-list'}
    = form_tag change_current_course_path, :class => 'btn btn-info btn-xs dropdown-toggle' do
      = select_tag 'course_id', options_from_collection_for_select(current_user.courses, 'id', 'name'), prompt: "My Courses"
      %span.caret

