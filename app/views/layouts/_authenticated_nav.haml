%section.top-bar-section.small-6.medium-4.columns.authenticated_nav
  %ul.right
    //%li.sr-only#my-courses-navigation Navigation for my courses
    %li.has-dropdown.course_switch{:role => "navigation", "aria-labeledby" => "my-courses-navigation", "title" => "Navigation for my courses"}
      %a My Courses
      %ul.dropdown
        - current_user.courses.alphabetical.each do |c|
          - if c.active?
            %li= link_to "#{c.courseno} #{c.semester.capitalize.first[0]}#{c.year}", change_current_course_path(:course_id => c.id), :method => 'post'

        - if current_user.archived_courses.present?
          .past_courses
            %hr
            %h5 Past Courses
            - current_user.courses.alphabetical.each do |c|
              - if ! c.active?
                %li.archived= link_to "#{c.courseno} #{c.semester.capitalize.first[0]}#{c.year}", change_current_course_path(:course_id => c.id), :method => 'post'
    %li.divider            
    = render "layouts/class_info"

    %li.sr-only#user-profile-navigation Navigation to user profile and log out
    %li.divider
    %li.has-dropdown{:role => "navigation", "aria-labeledby" => "user-profile-navigation", "title" => "Navigation to user profile and log out"}
      %a
        - if current_user.avatar_file_name.present?
          %img.img-rounded{:src => current_user.avatar_file_name, :width => 30, :height => 30} 
        = current_user.public_name
      %ul.dropdown
        %li= link_to "My Account", edit_profile_users_path
        %li= link_to "Logout", :logout
