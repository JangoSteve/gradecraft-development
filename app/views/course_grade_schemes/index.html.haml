= link_to 'New Course Grading Scheme', new_course_grade_scheme_path, :class => "btn btn-info btn-small"

%table.display.table-bordered.table
  %thead
    %tr
      %th Name
      %th
      %th
  %tbody
    - @course_grade_schemes.each do |scheme|
      %tr
        %td= link_to scheme.name, scheme
        %td= link_to 'Edit', edit_course_grade_scheme_path(scheme), :class => 'btn btn-tiny btn-success'
        %td= link_to 'Delete', course_grade_scheme_path(scheme), :class => 'btn btn-tiny btn-success', :data => { :confirm => 'Are you sure?' }, :method => :delete