.small-12.panel.mainContent
  / Challenge Grade Navigation
  = content_nav_for ChallengeGrade do
    = render "tabs"

  .small-12.columns
    %h3= @title
    %p
      %b #{term_for :challenge}:
      = link_to @challenge.name, @challenge
    %p
      %b Score:
      = points @challenge_grade.score
    %p
      %b Feedback:
      = @challenge_grade.feedback
    %p
      %b Status:
      = @challenge_grade.status
    %p
      %b #{term_for :team}:
      = link_to @challenge_grade.team.name, @challenge_grade.team
    %p
      %b Final score:
      = @challenge_grade.final_score


  .clearfix