= simple_form_for([@challenge, @challenge_grade], :html => {:class => 'form-horizontal' }) do |f|
  .form-inputs
    = f.association :team, :collection => @teams, :input_html => {:class => "col-lg-3 input-sm"}
    = f.input :score, :input_html => {:class => "col-lg-3"}, :hint => "out of #{points @challenge.point_total} points"
    = f.input :feedback, :input_html => {:style => "width: 90%; height: 200px;"}
    = f.input :status, :collection => Grade::STATUSES, :hint => "Can the student see this grade?", :include_blank => false

  .form-actions.col-lg-offset-3
    = f.button :submit, :class => "btn btn-primary"