= simple_form_for(@challenge_grade) do |f|

  .form-inputs
    = f.input :challenge_id
    = f.input :score
    = f.input :feedback, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => "Mini", :id => 'some-textarea', :class => 'span12', :maxlength => 1000} }, 
    = f.input :status
    = f.input :team_id
    = f.input :final_score

  .form-actions
    = f.button :submit