= content_nav_for @badge_set do
  %li= link_to 'See All Badge Sets', badge_sets_path, :class => "button tiny radius"
  %li= link_to "Edit #{@badge_set.name}", edit_badge_set_path(@badge_set), :class => "button tiny radius"
  %li= link_to 'Add New Badge', new_badge_path, :class => "button tiny radius"

.small-12
  %h2= @title

%table.responsive.simpleTable
  %thead
    %tr
      %th Badge
      %th.sortable{"data-sort" => "string"} Name
      %th.sortable{"data-sort" => "int"} Value
      %th.sortable{"data-sort" => "string"} Description
      %th
      %th
      %th
  %tbody
    - @badge_set.badges.each do |badge|
      %tr
        %td
          %img{:src => badge.icon, :alt => badge.name, :width => "40"}
        %td= badge.name
        %td= badge.point_total
        %td= raw badge.description
        %td= link_to "View", badge_path(badge), :class => 'button tiny radius'
        %td= link_to "Edit", edit_badge_path(badge), :class => 'button tiny radius'
        %td= link_to "Delete", badge_path(badge), :data => { confirm: 'Are you sure?' }, :class => 'button tiny radius', :method => :delete

