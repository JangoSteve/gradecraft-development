= content_nav_for "#{term_for :badge} Sets" do
  %li= link_to "New #{term_for :badge} Set", new_badge_set_path, :class => "btn btn-tiny btn-info"

.col-lg-12
  %h3= @title

%table.table.display.table-striped.simpleTable
  %thead
    %tr
      %th.sortable{"data-sort" => "string"} Name
      %th.sortable{"data-sort" => "string"} Notes
      %th
      %th
  %tbody
    - @badge_sets.each do |badge_set|
      %tr
        %td= link_to badge_set.name, badge_set
        %td= badge_set.description
        %td= link_to 'Edit', edit_badge_set_path(badge_set), :class => 'btn btn-tiny btn-info'
        %td= link_to 'Delete', badge_set, :class => 'btn btn-tiny btn-warning', :data => { confirm: 'Are you sure?' }, :method => :delete

