= simple_form_for(@badge_set, :html => {:class => 'form-horizontal' }) do |f|
  = f.input :name, :label => "Badge Set Name", :input_html => {:class => "col-lg-6"}
  = f.input :description, :as => :text, :input_html => {:style => "width: 90%; height: 200px;"}, :label => "Notes"

  .form-actions.col-lg-offset-3
    = f.button :submit, :class => "btn-primary"
    = link_to 'Cancel', badge_sets_path, :class => 'btn btn-info'

