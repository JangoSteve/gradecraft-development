= content_nav_for Event

%h3.pagetitle= @title

.context_menu
  %ul
    %li
      %a{:href => new_event_path }
        %i.fa.fa-edit
        New Event

.pageContent
  = render 'layouts/alerts'
  
  %table.responsive.nofeatures_default_due_date_dynatable
    %thead
      %tr
        %th{:width => "20%"} Name
        %th Description
        %th Open date
        %th Close date
        %th{:style => "min-width: 200px"}

    %tbody
      - @events.each do |event|
        %tr
          %td= link_to event.name, event
          %td= raw event.description
          %td= event.open_at
          %td= event.due_at
          %td
            .right
              %ul
                %li= link_to 'Edit', edit_event_path(event), :class => "button"
                %li= link_to 'Delete', event, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "button"