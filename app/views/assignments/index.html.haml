%table
  %tr
    %th ID
    %th Title
    %th Points
    %th Due Date
    - if current_user.is_staff?
      %th
      %th
      %th

  - @assignments.each do |assignment|
    %tr
      %td= assignment.id
      %td= assignment.title
      %td= assignment.point_total
      %td= assignment.due_date.to_formatted_s(:long_ordinal) 
      - if current_user.is_staff?
        %td= link_to 'View', assignment
        %td= link_to 'Edit', edit_assignment_path(assignment)
        %td= link_to 'Delete', assignment, :confirm => 'Are you sure?', :method => :delete

%br

- if current_user.is_staff?
  = link_to 'New Assignment', new_assignment_path
