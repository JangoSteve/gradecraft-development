- if current_user.is_staff?
  .small-12.panel.mainContent
    / Assignment navigation
    = content_nav_for Assignment do
      %li= link_to "Create a New #{term_for :assignment}", new_assignment_path, :class => "button tiny radius"
      %li= link_to "See All #{term_for :assignment_types}", assignment_types_path, :class => "button tiny radius"
      %li= link_to "Create a New #{term_for :assignment_type}", new_assignment_type_path, :class => "button tiny radius"
      %li= link_to "See All Ungraded Submissions", grading_status_path, :class => "button tiny radius"

    .small-12.columns
      %h2= @title

      %dl.accordion{:data => {'accordion' => true, 'collapse' => "persist" } }
        - current_course_data.by_assignment_type.each do |assignment_type, assignments|
          %dd
            %a.small-12{"href" => "##{assignment_type.id}" }= "#{assignment_type.name} â€“ #{points assignment_type.max_value} points"
            .small-3.right
              .button-bar
                %ul.button-group.round
                  %li= link_to "See Overview", all_grades_assignment_type_path(assignment_type), :class => "button tiny aindex"
                  %li= link_to "Edit #{assignment_type.name}", edit_assignment_type_path(assignment_type), :class => "button tiny aindex"
            .content{:id => "#{assignment_type.id}" }
              %table.responsive.simpleTable
                %thead
                  %tr
                    %th.sortable{"data-sort" => "string"} Name
                    %th.sortable{"data-sort" => "date"} Due
                    %th.sortable{"data-sort" => "int"} Points
                    %th.button-column
                %tbody
                  - assignments.each do |assignment|
                    %tr
                      %td= link_to assignment.name, assignment
                      %td= assignment.try(:due_at) || "Ongoing"
                      %td= points assignment.point_total
                      %td
                        .button-bar
                          %ul.button-group.round
                            %li= link_to "Quick Grade", mass_grade_assignment_path(assignment), :class => "button tiny secondary"
                            %li= link_to "See", assignment_path(assignment), :class => "button tiny secondary"
                            %li= link_to "Edit", edit_assignment_path(assignment), :class => 'button tiny secondary'
                            %li
                              %a{:href => assignment_path(assignment), :data => { confirm: 'Are you sure?', method: :delete }, :class => "button tiny secondary" }
                                %i.fi-trash
    .clearfix
