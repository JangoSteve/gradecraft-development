= content_nav_for @assignment do
  %li= link_to 'Edit', edit_assignment_path(@assignment)
  %li= link_to 'Back', assignments_path

%p
  %b Description:
  = raw @assignment.description
%p
  %b Point Total:
  = number_with_delimiter(@assignment.point_total, :delimiter => ',')
%p
  %b Open date:
  = @assignment.open_at
%p
  %b Close date:
  = @assignment.due_at

= form_tag assignment_path(@assignment), :method => :get do
  = hidden_field_tag :assignment_id, @assignment.id
  = select_tag :team_id, options_for_select(current_course.teams.map { |t| [t.name, t.id] }, @team.try(:id)), :prompt => "Select a #{current_course.team_term}"
  = submit_tag 'Filter', :class => 'btn btn-success btn-small'

- if current_user.is_staff?
  %h4 Grades
  - if @assignment.assignment_type.mass_grade?
    .pull-right
      = link_to 'Log Grades', mass_edit_assignment_grades_path(:assignment_id => @assignment.id), :class => "btn btn-tiny btn-success btn-primary"

  = simple_form_for @assignment do
    %table.display.table-bordered.table#sortableTable.tablesorter
      %thead
        %tr
          - if @assignment.release_necessary?
            %th
          %th= term_for :student
          %th Score
          - if @assignment.assignment_type.student_weightable?
            %th Multiplied Score
          - if @assignment.has_levels?
            %th Level
          %th Badges Earned
          - if @assignment.release_necessary?
            %th Status
          - if @assignment.accepts_submissions?
            %th Submission
          %th Grade
      %tbody
        - @students.each do |student|
          - grade = @assignment.grades.find_by student: student
          %tr
            - if @assignment.release_necessary?
              %td
                - if grade
                  = check_box_tag "grade_ids[]", grade.id
            %td= link_to student.name, student
            %td
              - if grade
                = grade.score
            - if @assignment.assignment_type.student_weightable?
              %td= "Multiplied Score"
            - if @assignment.has_levels?
              %td
                - if grade
                  = @assignment.grade_level(grade)
            %td
              - student.earned_badges.each do |badge|
                %img{:src => badge.try(:icon), :alt => badge.try(:name), :width => 40}
            - if @assignment.release_necessary?
              %td= grade.try(:status)
            - if @assignment.accepts_submissions?
              %td
                - student.submission_for_assignment(@assignment).tap do |submission|
                  - if submission && grade
                    = link_to "See Submission", assignment_submission_path(@assignment.id, submission, :grade_id => grade.id, :student_id => student.id), :class => 'btn btn-tiny btn-success'
                  - elsif submission
                    = link_to "See Submission", assignment_submission_path(@assignment.id, submission, :student_id => student.id, :student_type => "User", :gradeable_type => "User", :gradeable_id => student.id), :class => 'btn btn-tiny btn-success'
                  - else
                    = link_to "Submit", new_assignment_submission_path(@assignment, @submission, :student_id => student.id, :student_type => "User"), :class => 'btn btn-tiny btn-success'
            %td
              - if grade
                = link_to "See Grade", assignment_grade_path(@assignment.id, grade.id, :student_id => student.id), :class => 'btn btn-tiny btn-success'
              - else
                = link_to 'Grade', new_assignment_grade_path("assignment_id"=>@assignment.id, :student_id => student.id), :class => 'btn btn-tiny btn-success'
    - if @assignment.release_necessary?
      = submit_tag "Update Grade Statuses", :class => "btn btn-info"
