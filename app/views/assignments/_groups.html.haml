%h3= current_course.group_ref
%table.table-bordered.table
  %thead
    %tr
      - if @assignment.release_necessary?
        %th
      %th= current_course.group_ref
      %th Members
      %th Score
      - if @assignment.has_levels?
        %th Level
      %th Badges Earned
      - if @assignment.release_necessary?
        %th Status
      %th Submission
      %th Grade
      %th
      %th
      %th
    %tbody
      - @groups.each do |group|
        - @assignment.grade_for_group(group).tap do |grade|
          %tr
            - if @assignment.release_necessary?
              %td
                - if grade
                  = check_box_tag "grade_ids[]", grade.id
            %td= link_to group.name, assignment_group_path(@assignment, group)
            %td 
              %ul
                - group.users.each do |user|
                  %li= link_to user.name, user
            %td= grade.try(:unmultiplied_score)
            - if @assignment.has_levels?
              %td= @assignment.grade_level(grade.try(:unmultiplied_score))
            %td 
              - grade.try(:earned_badges) do |badge|
                %img{:src => badge.try(:icon), :alt => badge.try(:name), :width => 40}
            - if @assignment.release_necessary?
              %td= grade.try(:status)
            - @assignment.submission_for_group(group).tap do |submission|
              - if submission && grade
                %td= link_to "See Submission", assignment_assignment_submission_path(@assignment.id, submission, :grade_id => grade.id, :submittable_id => group.id, :submittable_type => "Group", :gradeable_type => "Group", :gradeable_id => group.id), :class => 'btn btn-mini'
              - elsif submission
                %td= link_to "See Submission", assignment_assignment_submission_path(@assignment.id, submission, :submittable_id => group.id, :submittable_type => "Group", :gradeable_type => "Group", :gradeable_id => group.id), :class => 'btn btn-mini'
              - else
                %td= link_to "Submit", new_assignment_assignment_submission_path(@assignment, @assignment_submission, :submittable_id => group.id, :submittable_type => "Group"), :class => 'btn btn-mini'
            - if grade
              %td= link_to "See Grade", assignment_grade_path(@assignment.id, grade.id, :gradeable_id => group.id, :gradeable_type => "Group"), :class => 'btn btn-mini'
              %td= link_to "Edit Grade", edit_assignment_grade_path(@assignment, grade, :gradeable_id => group.id, :gradeable_type => "Group"), :class => 'btn btn-mini'
              %td= link_to "Delete Grade", assignment_grade_path(@assignment, grade, :gradeable_id => group.id, :gradeable_type => "Group"), :class => 'btn btn-mini', :data => { :confirm => 'Are you sure?' }, :method => :delete
            - else
              %td= link_to 'Grade', new_assignment_grade_path("assignment_id"=>@assignment.id, :gradeable_id => group.id, :gradeable_type => "Group", :group_id => group.id), :class => 'btn btn-mini'
              %td
              %td
            %td= link_to "Delete Group", assignment_group_path(@assignment, group), :method => :delete, :class => "btn btn-mini"
  - if @assignment.release_necessary?
    = submit_tag "Update Grade Statuses", :class => "btn btn-info"
    
= link_to "Create a New Group", new_assignment_group_path(@assignment), :class => "btn btn-primary"