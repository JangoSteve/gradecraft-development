= semantic_form_for @assignment.becomes(Assignment) do |f|
  = f.input :type, :as => :hidden, :value => "Blogging"
  .text= f.input :point_total, :as => :number
  .text= f.input :due_date, :as => :datetime, :discard_year => true, :discard_hour => true, :discard_minute => true, :label => "Posted By"
