- if current_user_is_staff? 
  %a{:href => "#", "data-reveal-id" => "assignment_description", :data => {:reveal => "true" } } 
    %i.fi-eye
    Rules
- else
  %a.button.radius{:href => "#", "data-reveal-id" => "assignment_description", :data => {:reveal => "true" } } 
    %i.fi-eye
    Rules
#assignment_description.reveal-modal{:data => {:reveal => "true" }}
  %h3.bold= @assignment.name
  .italic= "Due: #{@assignment.due_at}"    
  - if @assignment.assignment_files.present?
    %ul
      .bold Attached files
      - @assignment.assignment_files.each do |af|
        %li
          = link_to af.filename, af.url
  %p= raw @assignment.description

  %hr

  %h3.uppercase #{ @assignment.assignment_type.name} Guidelines

  %p= raw @assignment.assignment_type.predictor_description

  %a.close-reveal-modal &#215;
