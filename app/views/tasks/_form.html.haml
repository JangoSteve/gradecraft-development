= simple_form_for([@assignment, @task], :html => {:class => 'form-horizontal' }) do |f|
  = f.input :name
  = f.input :description, :as => :text, :input_html => { :style => "width: 90%; height: 200px;"}
  = f.input :due_at, :as => :datetime

  .form-actions.col-lg-offset-3
    = f.button :submit, @button_title, :class => "btn-primary"
    = link_to 'Cancel', assignment_tasks_path, :class => 'btn btn-info'
