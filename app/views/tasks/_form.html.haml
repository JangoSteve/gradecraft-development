= simple_form_for([@assignment, @task], :html => {:class => 'form-horizontal' }) do |f|
  = f.input :title
  = f.text_area :description, :class => :ckeditor, :input_text => { :ckeditor => {:toolbar => "Mini", :id => 'some-textarea', :class => 'span12', :maxlength => 1000} }, :label => "Task Description"
  = f.datetime_select :due_at

  .form-actions
    %div.btn-toolbar    
      %div.btn-group
        = f.button :submit, @button_title, :class => "btn-primary"
      %div.btn-group
        = link_to 'Cancel', assignment_tasks_path, :class => 'btn btn-info'
