= content_nav_for @assignment, @task do
  %li= link_to "See #{@assignment.name}", @assignment, :class => "btn btn-info btn-tiny"
  - if @task.assignment_type == "Assignment"
    %li= link_to 'Edit #{@task.name} Task', edit_assignment_task_path, :class => "btn btn-info btn-tiny"
  - else
    %li= link_to "Edit #{@task.name} Task", edit_badge_task_path(@assignment.id, @task.id), :class => 'btn btn-tiny btn-info'
  //%li= link_to 'Create a New Task', new_assignment_task_path, :class => "btn btn-info btn-tiny"

.col-lg-12
  %h3= @title
  %p
    %b Assignment:
    = @assignment.name

  %p
    %b Title:
    = @task.name
  %p
    %b Description:
    = raw @task.description
  %p
    %b Due Date:
    = @task.due_at

