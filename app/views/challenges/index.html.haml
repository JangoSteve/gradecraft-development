%table
  %tr
    %th Challenge
    %th Points
    %th Description
    %th Date
    - if current_user.is_staff?
      %th
      %th
      %th

  - @challenges.each do |challenge|
    %tr
      %td= challenge.title
      %td= challenge.points
      %td= challenge.description
      %td= challenge.date
      - if current_user.is_staff?
        %td= link_to 'View', challenge
        %td= link_to 'Edit', edit_challenge_path(challenge)
        %td= link_to 'Delete', challenge, :confirm => 'Are you sure?', :method => :delete

%br

- if current_user.is_staff?
  = link_to 'Create a New Challenge', new_challenge_path
