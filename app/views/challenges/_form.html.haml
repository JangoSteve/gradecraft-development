= simple_form_for(@challenge, :html => {:class => 'form-horizontal' }) do |f|

  .form-inputs
    = f.input :name
    = f.text_area :description,  :class =>  :ckeditor, :input_html => { :ckeditor => {:toolbar => "Mini", :id => 'some-textarea', :class => 'span12', :maxlength => 1000} }, :label => "Description", :placeholder => "What do the teams need to do to succed?"
    = f.input :point_total
    = f.input :due_at
    = f.input :visible, :label => "Visible to students?"
    = f.input :accepts_submissions, :label => "Teams submit materials?"
    = f.input :release_necessary, :label => "Release necessary?"

  .form-actions
    %div.btn-toolbar
      %div.btn-group
        = f.button :submit, :class => "btn-primary"
      %div.btn-group
        = link_to 'Cancel', challenges_path, :class => 'btn btn-info'