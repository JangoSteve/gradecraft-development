= simple_form_for(@score_level, :html => {:class => 'form-horizontal' }) do |f|
  = f.input :name, :label => "Level Name"
  = f.input :value
  = f.association :assignment_type, :collection => @assignment_types
  
  .form-actions
    %div.btn-toolbar
      %div.btn-group
        = f.button :submit, :class => "btn-primary"
      %div.btn-group
        = link_to 'Cancel', score_levels_path, :class => 'btn btn-info'