%h5.pageTitle Rubrics

%div.col-lg-12#content_nav
  = link_to 'New Rubric', new_rubric_path, :class => "btn btn-info col col-sm-12 col-lg-2 btn-small pull-right"

%table.table.display.table-bordered
  %thead
    %tr
      %th Name
      %th Description
      %th(colspan="3")
  %tbody
    - @rubrics.each do |rubric|
      %tr
        %td= rubric.name
        %td= rubric.description
        %td
          = table_link_to 'Show', rubric
          = table_link_to 'Edit', edit_rubric_path(rubric)
          = table_link_to 'Destroy', rubric, method: :delete, data: { confirm: 'Are you sure?' }
