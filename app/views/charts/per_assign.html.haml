- @assignments.group_by(&:assignment_type).each do |assignment_type, assignments|
  .col-lg-12
    %h3= link_to assignment_type.name, assignment_type
  %table.table.simpleTable.table-striped
    %thead
      %tr
        %th Name
        %th Minimum Score
        %th Maximum Score
        %th Average Score
        %th Grade Distribution
    %tbody
      - assignments.each do |assignment|
        %tr
          %td= assignment.name
          %td= assignment.low_score
          %td= assignment.high_score
          %td= assignment.submitted_average
          %td
            %div{:class => "grades_per_assign", :data => { :id => assignment.id.to_s }}
