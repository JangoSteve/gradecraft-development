= simple_form_for(@badge, :html => {:class => 'form-horizontal' }) do |f|
  = f.input :title
  = f.input :description, :as => :text, :label => "Description", :input_html => {:id => 'some-textarea', :class => 'span6' }, :placeholder => "Describe what this badge means, and how it can be earned. Note that if this badge is marked as visible then this description will also be viewable in the list of badges."
  = f.input :icon
  = f.input :visible, :as => :radio
  = f.input :occurrence, :collection => [["Onetime", "onetime"], ["Multiple", "multiple"]]
  
  = f.button :submit, :class => 'btn btn-primary'
  = link_to 'Cancel', badges_path, :class => 'btn btn-primary'