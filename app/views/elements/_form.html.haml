= simple_form_for([@badge, @element], :html => {:class => 'form-horizontal' }) do |f|
  = f.input :name
  = f.input :description, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => "Mini", :id => 'some-textarea', :class => 'span12', :maxlength => 1000} }
    
  .form-actions
    %div.btn-toolbar
      %div.btn-group
        = f.button :submit, :class => "btn-primary"
      %div.btn-group
        = link_to 'Cancel', badges_path, :class => 'btn btn-info'