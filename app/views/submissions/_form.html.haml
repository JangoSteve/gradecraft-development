= simple_form_for([@assignment, @submission], :html => {:class => 'form-horizontal' }) do |f|
  - if @assignment.has_groups?
    = f.input :student_id, :collection => @groups, :label => "#{current_course.group_term}"
  - else
    = f.input :student_id, :collection => @students, :label => "#{current_course.user_term}", :include_blank => false
  = f.association :assignment, :default => @assignment, :as => :hidden
  = f.input :link, :hint => "Where is the assignment located on the web?", :input_html => {:class => 'col col-lg-8' }
  = f.text_area :text_comment, :class => :ckeditor, :input_html => { :ckeditor => {:toolbar => "Mini", :id => 'some-textarea', :class => 'span12', :maxlength => 1000} }, :label => "Comment. Note this must be <strong>TEXT ONLY</strong>"

  .form-actions
    .btn-toolbar
      .btn-group
        = f.button :submit, "Submit", :class => "btn-primary"
      .btn-group
        = link_to 'Cancel', assignment_path(@assignment), :class => 'btn btn-info'
