%h4
  .col-lg-2= "#{term_for :group}:"
  .col-lg-offset-2= link_to @group.name, group_path(@grade.group)

%hr.clear

- @group.students.each do |student|
  .heading.col-lg-2 #{term_for :student}
  .col-lg-offset-2= link_to @assignment.grade_for_student(student).student.name, student_path(@assignment.grade_for_student(student).student)
  .heading.col-lg-2 Raw Score:
  .col-lg-offset-2= @assignment.grade_for_student(student).raw_score if (@assignment.grade_for_student(student).is_graded? || @assignment.grade_for_student(student).is_released?)
  - if @assignment.grade_for_student(student).final_score?
    .heading.col-lg-2 Final Score:
    .col-lg-offset-2= @assignment.grade_for_student(student).final_score
  - if @assignment.grade_for_student(student).grade_files.present?
    .heading.col-lg-2 Documents:
    .col-lg-offset-2
      - @assignment.grade_for_student(student).grade_files.each do |gf|
        = link_to File.basename(gf.filename.path), gf.filename.url

  - if @assignment.grade_for_student(student).feedback?
    .heading.col-lg-2 Feedback:
    .col-lg-offset-2= raw @assignment.grade_for_student(student).feedback

  - if @assignment.grade_for_student(student).earned_badges.present?
    .heading.col-lg-2= "#{term_for :badges}:"
    .col-lg-offset-2
      - @assignment.grade_for_student(student).earned_badges.each do |badge|
        %img{:src => badge.try(:icon), :alt => badge.name, :width => "40", :height => "40"}

  - if @assignment.grade_for_student(student).assignment.release_necessary?
    .heading.col-lg-2 Status:
    .col.col-lg-offset-2= @assignment.grade_for_student(student).status
  %hr