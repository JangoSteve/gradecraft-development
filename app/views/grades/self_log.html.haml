= simple_form_for([@assignment, @grade], :url => self_log_create_assignment_grades_path(:assignment_id => @assignment.id)) do |f|
  = f.label :raw_score, "#{@assignment.student_logged_button_text}"
  = f.select :raw_score, [["Yes", @assignment.point_total]]
  = f.submit "Submit", :class => "button"
