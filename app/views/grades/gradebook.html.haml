%table.table.table-bordered
  %thead
    %tr
      %th #{current_course.user_term}
      - for assignment in @assignments
        %th= assignment.title
    - @students.each do |student|
      %tr 
        %td= student.name
        - @assignments.each do |assignment|
          - student.grade_for_assignment(assignment).tap do |grade|
            - if grade
              %td= grade.score
            - else
              %td

