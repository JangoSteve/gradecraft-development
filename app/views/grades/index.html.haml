.filters
  = form_tag grades_path, :method => :get do
    = select_tag :assignment_id, options_for_select(Assignment.all.map { |a| [a.title, a.id] }, @assignment.try(:id)), :prompt => 'Select Assignment'
    = submit_tag 'Filter'

= paginate @grades

%table
  %tr
    %th Username
    %th Team
    %th= Assignment
    %th= sortable "score"
    %th= sortable "feedback"
    %th= sortable "badge_id"
    %th
    %th
    %th
    - for grade in @grades
      %tr
        %td= grade.user.username
        %td= grade.user.team_id
        %td= grade.assignment.title
        %td= grade.score
        %td= grade.feedback
        %td
          - grade.earned_badges.each do |badge|
            %img{:src => badge.icon, :alt => badge.title, :width => "25", :height => "25"}
        %td= link_to 'View', grade_path(grade)
        %td= link_to 'Edit', edit_grade_path(grade)
        %td= link_to 'Delete', grade_path(grade), :confirm => 'Are you sure?', :method => :delete

%br

