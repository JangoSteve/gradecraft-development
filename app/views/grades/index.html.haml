%table
  %tr
    %th Username
    %th Team
    %th= sortable "assignment_id"
    %th= sortable "score"
    %th= sortable "feedback"
    %th= sortable "badge_id"
    %th
    %th
    %th
    - for grade in @grades
      %tr
        %td= grade.user.username
        %td= grade.user.team_id
        %td= grade.assignment.title
        %td= grade.score
        %td= grade.feedback
        %td
          - grade.earned_badges.each do |badge|
            %img{:src => badge.icon, :alt => badge.title, :width => "25", :height => "25"}
        %td= link_to 'View', grade
        %td= link_to 'Edit', edit_grade_path(grade)
        %td= link_to 'Delete', grade, :confirm => 'Are you sure?', :method => :delete

%br

%div#footerNav
  %span.button= link_to 'New Grade', new_grade_path
