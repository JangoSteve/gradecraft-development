.small-12.columns
  %h3.center Class Analytics
  %h6.small (click chart to see results)

  %dl.tabs{:data => {'tab' => true}, :class => "analytics_tabs"}
    %dd.active
      = link_to image_tag(asset_path('boxplot.png'), :width => 80), "#boxplot"
    %dd
      = link_to image_tag(asset_path('halfcircle.png'), :width => 80), "#submitted"
    %dd
      = link_to image_tag(asset_path('pie.png'), :width => 80), "#levels"

  .tabs-content{:style => "background-color: #FFFFFF;"}
    .content.small-12#boxplot.active
      %h4.bold.center Grade Distribution
      .center
        .chartcontainer
          .grades_per_assign{ "data-scores" => @assignment.grades.graded.pluck('score') }

        %h6.small= link_to "How do I read this chart?", "http://www.youtube.com/watch?v=7UK2DK7rblw&feature=youtu.be", :target => "_blank"
  %hr

  .row
    .small-12.medium-6.columns
      %h4.bold Basic Stats
      %ul
        %li
          %span.small_uppercase Average Score:
          = points @assignment.average
        %li
          %span.small_uppercase Minimum Score:
          = points @assignment.low_score
        %li
          %span.small_uppercase High Score: 
          = points @assignment.high_score

    .small-12.medium-6.columns
      %h4.bold Grade Distribution
      .chartcontainer
        .grades_per_assign{ "data-scores" => @grades_for_assignment.to_json }

  %hr

  .row
    .small-12.medium-6.columns
      %h4.bold Participants

      - if @assignment.accepts_submissions? && @assignment.submissions.present?
        #numberComplete{:"data-type" => "full", "data-info" => "#{term_for :students} Submitted", "data-percent" => "#{@assignment.submission_rate(current_course)}", "data-fgcolor" => "#61a9dc", "data-bgcolor" => "#333333", "data-text" => "#{@assignment.submissions.count}", "data-dimension" => "250", "data-fontsize" => "38", "data-border" => "#222222", "data-bordersize" => "2"  }

      - else
        #numberComplete{:"data-type" => "full", "data-info" => "#{term_for :students} Participated", "data-percent" => "#{@assignment.completion_rate(current_course)}", "data-fgcolor" => "#61a9dc", "data-bgcolor" => "#333333", "data-text" => "#{@assignment.grade_count}", "data-dimension" => "250", "data-fontsize" => "38", "data-border" => "#222222", "data-bordersize" => "2"   }

    .small-12.medium-6.columns
      %h4.bold Percentage Scores Earned
      .small-12#levels_per_assignment{'data-levels' =>  @assignment.percentage_score_earned.to_json }
