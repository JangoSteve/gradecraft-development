= content_nav_for Course do
  %li= link_to 'New Course', new_course_path, :class => "button tiny radius success"

.small-12.columns
  %h3= @title

  %table.responsive.simpleTable
    %thead
      %tr
        %th.sortable{"data-sort" => "string"} Name
        %th.sortable{"data-sort" => "string"} Course No
        %th.sortable{"data-sort" => "string"} Year
        %th.sortable{"data-sort" => "string"} Semester
        %th.sortable{"data-sort" => "string"} Badges
        %th.sortable{"data-sort" => "string"} Total Points
        %th
    %tbody
      - @courses.each do |course|
        %tr
          %td= link_to course.name, course
          %td= course.courseno
          %td= course.year
          %td= course.semester
          %td
          %td= points course.total_points
          %td
            .button-bar
              %ul.button-group.round
                %li= link_to 'Edit', edit_course_path(course), :class => 'button tiny'
                %li= link_to 'Delete', course, :class => 'button tiny', :data => { confirm: 'Are you sure?' }, :method => :delete
                %li= link_to "Copy", copy_courses_path(:id => current_course), :class => 'button tiny', :method => :copy
