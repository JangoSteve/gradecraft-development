%table.table-bordered.table
  %thead
    %tr
      %th Name
      %th Course No
      %th Year
      %th Semester
      %th Badge Set
      %th Theme
      %th Total Points
      %th Grade Scheme
      %th
      %th
      %th
  %tbody
    - @courses.each do |course|
      %tr
        %td= course.name
        %td= course.courseno
        %td= course.year
        %td= course.semester
        %td= course.badge_set_id
        %td= course.theme_id
        %td= course.total_points
        %td= course.grade_scheme_id
        %td= link_to 'View', course, :class => 'btn btn-mini'
        %td= link_to 'Edit', edit_course_path(course), :class => 'btn btn-mini'
        %td= link_to 'Delete', course, :class => 'btn btn-mini', :data => { :confirm => 'Are you sure?' }, :method => :delete

%div#footerNav
  = link_to 'New Course', new_course_path, {:class => 'btn btn-primary'}
