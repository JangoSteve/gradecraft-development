.small-12.panel.mainContent
  / Courses Navigation
  = content_nav do
    = render "tabs"

  %h3.pagetitle#tableCaption= @title

  .small-12.columns
    %table.columns.nosearch_dynatable{"aria-describedby" => "tableCaption"}
      %thead
        %tr
          %th{:scope => "col"} Name
          %th{:scope => "col"} Course No
          %th{:scope => "col"} Year
          %th{:scope => "col"} Semester
          %th{:scope => "col"} Badges
          %th{:scope => "col"} Total Points
          %th{:scope => "col"}
            %span.sr-only Actions
      %tbody
        - @courses.each do |course|
          %tr
            %td= link_to course.name, course
            %td= course.courseno
            %td= course.year
            %td= course.semester
            %td
            %td= points course.total_points
            - if current_user_is_admin?
              %td
                - if course == current_course
                  = link_to_unless_current "Export Grades for Research", research_gradebook_path, :class=>"data-clearing"

            %td
              .button-bar
                %ul.button-group.round.right
                  %li
                    = link_to edit_course_path(course), :class => 'button tiny secondary' do
                      Edit
                      %span.sr-only #{course.name}
                  %li
                    = link_to course, :class => 'button tiny secondary', :data => { confirm: 'Are you sure?' }, :method => :delete do
                      Delete
                      %span.sr-only #{course.name}
                  %li
                    = link_to copy_courses_path(:id => current_course), :class => 'button tiny secondary', :method => :copy do
                      Copy
                      %span.sr-only #{course.name}

  .clearfix
