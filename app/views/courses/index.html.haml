= link_to 'New Course', new_course_path, {:class => 'btn btn-info btn-small'}

%table.table-bordered.table#sortableTable.tablesorter
  %thead
    %tr
      %th Name
      %th Course No
      %th Year
      %th Semester
      %th Badge Set
      %th Theme
      %th Total Points
      %th Grade Scheme
      %th.header
      %th.header
  %tbody
    - @courses.each do |course|
      %tr
        %td= link_to course.name, course
        %td= course.courseno
        %td= course.year
        %td= course.semester
        %td= course.badge_set_id
        %td= course.theme.try(:name)
        %td= course.total_points
        %td= course.course_grade_scheme.try(:name)
        %td= link_to 'Edit', edit_course_path(course), :class => 'btn btn-tiny btn-success'
        %td= link_to 'Delete', course, :class => 'btn btn-tiny btn-success', :data => { :confirm => 'Are you sure?' }, :method => :delete