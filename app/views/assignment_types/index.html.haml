= content_nav_for AssignmentType do
  %li= link_to 'New Assignment Type', new_assignment_type_path

%table.table-bordered.table-condensed.table#sortableTable.tablesorter
  %thead
    %tr
      %th Order
      %th Name
      %th Points
      %th Grading Levels
      %th Predictor Display
      %th Due Date
      %th Resubmission
      %th Max value
      %th % Course
      %th Predictor Description
      %th.header
      %th.header
      %th.header
    %tbody
      - current_course.assignment_types.each do |assignment_type|
        %tr
          %td= assignment_type.order_placement
          %td= assignment_type.name
          %td= assignment_type.point_setting
          %td= assignment_type.levels? ? "Yes" : "No"
          %td= assignment_type.points_predictor_display
          %td= assignment_type.due_date_present
          %td= assignment_type.resubmission
          %td= assignment_type.max_value
          %td= assignment_type.percentage_course
          %td= raw assignment_type.predictor_description
          %td= link_to 'View', assignment_type, :class => 'btn btn-tiny btn-success'
          %td= link_to 'Edit', edit_assignment_type_path(assignment_type), :class => 'btn btn-tiny btn-success'
          %td= link_to 'Delete', assignment_type, :class => 'btn btn-tiny btn-success', :data => { :confirm => 'Are you sure?' }, :method => :delete

