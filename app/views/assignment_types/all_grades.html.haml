- if current_user.is_staff?
  .small-12.panel.mainContent
    / Badge Navigation
    = content_nav_for AssignmentType do
      %li= link_to "Create New #{term_for :assignment_type}", new_assignment_type_path, :class => "button tiny radius"

    .small-12.columns
      / Gradebook Table
      %table.responsive.simpleTable
        %thead
          %tr
            %th.sortable{"data-sort" => "string"} #{current_course.user_term}
            - for assignment in @assignment_type.assignments.chronological
              %th.sortable{"data-sort" => "int"}= assignment.name
        %tbody
          - current_course_data.students.each do |student|
            %tr
              %td= link_to student.name, user_path(student)
              - @assignment_type.assignments.chronological.each do |assignment|
                - assignment.grade_for_student(student).tap do |grade|
                  - if grade && grade.score != 0
                    %td.complete= link_to "#{points grade.score}", edit_assignment_grade_path(assignment, :student_id => student.id)
                  - else
                    %td.absent

    .clearfix