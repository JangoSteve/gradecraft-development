.small-12.panel.mainContent
  / Assignment Type Navigation
  = content_nav_for AssignmentType, "Edit #{breadcrumb_link_for(@assignment_type)}".html_safe do
    = render "assignments/tabs"

  .hide-for-medium-up{:style => "padding: 10px"}
    = mobile_nav_for AssignmentType, "Edit #{breadcrumb_link_for(@assignment_type)}".html_safe

  .small-12.columns
    .hide-for-medium-up
      %a.radius.button.tiny.small-12.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Options
      %ul#drop.f-dropdown
        = render "assignments/tabs"

    / Display Assignment Type form
    = render 'form'

  .clearfix