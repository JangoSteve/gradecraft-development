%table.table.table-bordered
  %thead
    %tr
      %th Badge
      %th Tasks
      %th # Earned
      %th
  %tbody
    - badges.each do |badge|
      %tr
        %td
          = image_tag badge.icon, :alt => badge.name, :width => 40
          = link_to badge.name, badge
        %td
          %ul
            - badge.tasks.each do |task|
              %li= link_to task.title, badge_task_path(badge, task)
        %td= badge.earned_badges.count
        %td= link_to "Award", new_badge_earned_badge_path(:badge_id => badge), :class => "btn btn-tiny btn-success"
