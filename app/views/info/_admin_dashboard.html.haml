- if current_course.has_badges?
  = link_to "Award a Badge", new_earned_badge_url, :class => "btn btn-inverse"
    
%div.span6
  %h4= "Top 10" 
  %table.table.table-bordered
    %thead
      %tr
        %th= current_course.user_term
        %th Score
        %th Badges Earned
        %th Attendance Rate
        %th Logins
        %th Pageviews
        %th Predictor Views
        %th
        %th
    %tbody
      - @top_ten_students.each do |student|
        %tr
          %td= link_to student.name, user_path(:id => student.id)
          %td= student.sortable_score
          %td= student.user_badge_count
          %td= student.attendance_rate
          %td= student.visit_count
          %td= student.page_views
          %td= student.predictor_views
          %td= link_to "Email #{student.first_name}", "mailto:#{student.email}", :class => "btn btn-primary btn-mini"
          %td
            - student.team_leader.tap do |team_leader|
              - if team_leader.present?
                %div= link_to "Email GSI (#{team_leader.public_name})", "mailto:#{team_leader.email}", :class => "btn btn-primary"
                  

