.small-12.panel.mainContent
  .show-for-large-up
    = content_nav_for "Course Timeline" do
      = render "students/student_profile_tabs"
  .hide-for-large-up{:style => "padding: 10px"}
    = mobile_nav_for "Course Timeline"
  
  .small-12.columns
    .hide-for-large-up
      %a.radius.button.tiny.small-12.medium-8.dropdown{:href => "#", :data => { :dropdown => "drop" } }
        Select
      %ul#drop.f-dropdown
        = render "students/student_profile_tabs"

    %h2
      Your current score is
      / Check to see if the course has a pre-determined total number of points
      - if current_course.point_total?
        %span.bold #{points current_user.cached_score_for_course(current_course)}
        %span /#{points current_course.point_total} points
        / Else tally all of the points for all of the assignments in the course
      - else
        %span#userScoreNum #{points current_user.cached_score_for_course(current_course)}
        %span /#{points current_course.total_points} points
      - if current_user.grade_level_for_course(current_course).present?
        â€“ Current Level:
        %span#userScoreNum= current_user.grade_level_for_course(current_course)

  = render "students/timeline"

  .clearfix